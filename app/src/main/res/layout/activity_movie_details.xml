<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetails">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/movieImage" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
    />
    <TextView
            android:textColor="#c3c3c3"
            android:text="TITLE"
            android:textSize="22dp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text2"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/movieImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <TextView
            android:textColor="#c3c3c3"
            android:fontFamily="@font/montserrat"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/movie_title"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <TextView
            android:textColor="#c3c3c3"
            android:text="DESCRIPTION"
            android:textSize="22dp"
            android:singleLine="false"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/text"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>
    <TextView
            android:textColor="#c3c3c3"
            android:fontFamily="@font/montserrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/description"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

    <ToggleButton
            android:text="Play"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/description" app:layout_constraintHorizontal_bias="0.031"
            android:id="@+id/play"
            android:textOff="Play"
            android:textOn="Play"
            android:background="@drawable/btn_bg"/>
    <Button
            android:text="Add"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/description" app:layout_constraintHorizontal_bias="1.0"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:id="@+id/add_movie_to_list"
            android:icon="@drawable/ic_add"
    />
</androidx.constraintlayout.widget.ConstraintLayout>